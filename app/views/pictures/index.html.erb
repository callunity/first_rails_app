<div class="top">
  <h1>Pictures</h1>   <%= link_to "New Picture", "/pictures/new" %>
</div>


<div class="images">
  <% @most_recent_pictures.each do |picture| %>
    <p><h2><%= picture[:title] %></h2> <h4><%= picture[:artist] %></h4></p>
    <p><%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %></p>
  <% end %>
</div>

<h1>Older Pictures</h1>

<div class="images">
  <% @older_pictures.each do |picture| %>
    <p><h2><%= picture[:title] %></h2> <h4><%= picture[:artist] %></h4></p>
    <p><%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %></p>
  <% end %>
</div>