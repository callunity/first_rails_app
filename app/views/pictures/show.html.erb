<%= link_to "Back to all Pictures", pictures_path %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, :confirm => "Are you sure?", :method => :delete %>

<p><h2><%= @picture.title %></h2> <h4><%= @picture.artist %></h4></p>
<img src="<%= @picture.url %>">

<h3>Comments</h3>
<%= render @picture.comments %>

<h3>Have your say:</h3>
<%= form_for([@picture, @picture.comments.build]) do |c| %>
<p>
  <%= c.label :commenter %><br>
  <%= c.text_field :commenter %>
</p>
<p>
  <%= c.label :body %><br>
  <%= c.text_area :body %>
</p>
<p>
  <%= c.submit %>
</p>
<% end %>

<%= link_to "Back to all Pictures", pictures_path %>